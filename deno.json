{
  "imports": {
    "react": "npm:react",
    "preact": "npm:preact",
    "cva": "npm:class-variance-authority",
    "clsx": "npm:clsx",
    "lume/": "https://deno.land/x/lume@v2.1.4/"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "build": "deno task lume",
    "serve": "deno task lume -s",
    "cms": "deno task lume cms"
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "npm:preact"
  },
  "fmt": {
    "exclude": [
      "*"
    ]
  }
}
