{
  "nodeModulesDir": "auto",
  "imports": {
    "lume/": "https://deno.land/x/lume@v2.5.2/",
    "@catppuccin/tailwindcss": "npm:@catppuccin/tailwindcss",
    "@tailwindcss/typography": "npm:@tailwindcss/typography",
    "@trivago/prettier-plugin-sort-imports": "npm:@trivago/prettier-plugin-sort-imports",
    "autoprefixer": "npm:autoprefixer",
    "cssnano": "npm:cssnano",
    "prettier": "npm:prettier",
    "prettier-plugin-tailwindcss": "npm:prettier-plugin-tailwindcss",
    "tailwindcss": "npm:tailwindcss",
    "tailwindcss/": "npm:tailwindcss/",
    "tailwind-scrollbar": "npm:tailwind-scrollbar",
    "lucide-preact": "https://cdn.jsdelivr.net/npm/lucide-preact",
    "react": "npm:react",
    "preact": "npm:preact",
    "preact/hooks": "npm:preact/hooks",
    "cva": "npm:class-variance-authority",
    "clsx": "npm:clsx",
    "rehype-slug": "npm:rehype-slug"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "format": "deno run -A npm:prettier . --write",
    "build": "deno task lume",
    "serve": "deno task lume -s"
  },
  "compilerOptions": {
    "types": ["lume/types.ts"],
    "jsx": "react-jsx",
    "jsxImportSource": "npm:preact"
  },
  "lint": {
    "rules": {
      "exclude": ["no-window"],
      "tags": ["recommended"]
    }
  },
  "fmt": false
}
